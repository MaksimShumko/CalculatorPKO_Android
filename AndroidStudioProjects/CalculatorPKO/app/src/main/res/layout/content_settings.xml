<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.maksim.calculatorpko.Settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings:"
        android:id="@+id/textView_sett"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:background="@drawable/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView_sett"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type of operation"
            android:id="@+id/textView_operation1"
            android:layout_below="@+id/textView_sett"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_operation2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_operation1"
            android:layout_alignEnd="@+id/textView_operation1"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:editable="false" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Time interval"
            android:id="@+id/textView_interval1"
            android:textSize="25dp"
            android:autoText="false"
            android:singleLine="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_interval2"
            android:layout_below="@+id/textView_interval1"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView_operation1"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:autoText="false"
            android:singleLine="false"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type of amount"
            android:id="@+id/textView_amount1"
            android:textSize="25dp"
            android:layout_below="@+id/textView_interval2"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_amount2"
            android:layout_below="@+id/textView_amount1"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView_operation1"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Currency"
            android:id="@+id/textView_curr1"
            android:textSize="25dp"
            android:layout_below="@+id/textView_amount2"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_curr2"
            android:layout_below="@+id/textView_curr1"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView_operation1"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press if you want to change"
        android:id="@+id/textView2"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView_sett"
        android:layout_alignParentStart="true" />

</RelativeLayout>
